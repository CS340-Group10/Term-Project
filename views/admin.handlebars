<br>
<div>
  <h2>Teams</h2>
    <table>
      <thead>
        <tr>
			<th>Team ID</th>
			<th>Team Name</th>
			<th>City</th>
			<th>State</th>
			<th>Organization</th>
			<th>Active Salary Cap</th>
			<th> </th>
        </tr>
      </thead>
      <tbody>
        {{#each teams}}
			<tr>
				<td>{{this.team_id}}</td>
				<td>{{this.team_name}}</td>
				<td>{{this.city}}</td>
				<td>{{this.state}}</td>
				<td>{{this.sport_name}}</td>
				<td>{{this.active_salary_cap}}</td>
			    <td><button onclick="deleteTeam({{this.team_id}})">Delete</button></td>

			</tr>
		{{/each}}
      </tbody>
	  </table>
</div>
<br>
<div>
  <h2>Injuries</h2>
