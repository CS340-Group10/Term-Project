          <th> Type </th>
		  <th> Notes </th>
		  <th> </th>
        </tr>
      </thead>
      <tbody>
        <tr class="body">
        {{#each injuries}}
			<tr>
				<td>{{this.injury_id}}</td>
				<td>{{this.injury_name}}</td>
				<td>{{this.injury_type}}</td>
				<td>{{this.injury_notes}}</td>
				<td><button onclick="deleteInjury({{this.injury_id}})">Delete</button></td>
